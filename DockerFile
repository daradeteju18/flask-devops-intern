# Use slim Python image to reduce size
FROM python:3.1-slim

# Set work directory inside the container
WORKDIR /app

# Install dependencies early to use Docker layer caching
COPY requirements.txt .

# Install Python dependencies without cache
RUN pip install --no-cache-dir -r requirements.txt

# Copy application files
COPY . .

# Expose Flask default port (optional but good practice)
EXPOSE 5000

# Run the Flask app (ensure run.py exists)
CMD ["python", "run.py"]
